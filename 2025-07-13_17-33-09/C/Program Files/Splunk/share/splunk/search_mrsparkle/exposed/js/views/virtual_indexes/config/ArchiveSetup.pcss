/*  Splunk: Pages: Virtual Indexes */
/*  ============================== */

.shared-controls-syntheticcheckboxcontrol {
  label.checkbox {
    padding: 0;
  }
}

/*  inline checkboxes */
.index-recursive,
.index-whitelist
{
  .control-label,
  .controls,
  .control,
  .checkbox
  {
    display: inline;
  }
  .checkbox {
    margin-left: 1em;
  }
}

/*  table spacing */
.shared-dynamicfields .elements {
  td {
    padding: 5px;
  }
}

.key-text-control-placeholder .shared-controls-textcontrol{
  float: right;
}

.shared-controls-keyvaluecontrol {
  margin-bottom: 10px;
}

.form-horizontal .control-label {
  width: 300px;
}

.form-horizontal .controls {
  margin-left: 310px;
}

.select2-drop .select2-results .select2-disabled {
    color: $textDisabledColor;
}

.unified-search-cutoff-wrapper {
  display: inline-block;
  .control-group {
    .controls {
      margin-right: 2px;
      label.checkbox {
        padding-left: 22px;
      }
      label.checkbox > .btn {
        left: 0px;
      }
    }
  }
}
