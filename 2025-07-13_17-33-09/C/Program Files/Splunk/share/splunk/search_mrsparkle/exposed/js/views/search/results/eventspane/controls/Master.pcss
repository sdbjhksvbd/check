$eventsPaneWidth: 280px;

.search-results-eventspane-controls {
	min-height: 36px;
}

/*  docking controls */
.events-controls-inner {
	padding: 4px $spacing 4px 0;
	background-color: $containerBackgroundColor;
	height: 42px;
	position: relative;
	box-sizing: border-box;

	.pagination {
		padding-top: 1px;
	}
	/* SPL-73911, removing this to fix event controls/modalize issues. */
	/* --> can't track down why this was here. */
	/* z-index: 2; */

	i[class^="icon-"] + .link-label {
		margin-left: $spacingQuarter;
	}

	.shared-vizcontrols-format {
		vertical-align: top;
		> .btn-pill {
			margin-bottom: 3px;
		}
	}

	.btn-group + .btn-group {
		margin-left: 0;
	}

	&.affix-top {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		margin-bottom: -1px;
		z-index: calc($zindexHeaderTable + 5);
		&.disabled .events-controls-inner-cover {
			position: absolute;
			top: 0px;
			right: 0px;
			bottom: 0px;
			left: 0px;
			opacity: 0.30;
			background-color: $gray45;
			z-index: 404;
		}
	}
}


.search-results-eventspane-controls-showfield {
	margin: 0 $spacingHalf;
}

/*  state for field picker */
.show-fields {
	.search-results-wrapper
	{
		padding-left: $eventsPaneWidth;
	}
	.search-results-eventspane-fieldsviewer {
		margin-left: -$eventsPaneWidth;
		width: $eventsPaneWidth;
		float:left;
        border-right: $borderLight;
	}

	.events-controls-inner {
		margin-left: calc($eventsPaneWidth + 1);

		&.affix-top {
			left: calc($eventsPaneWidth + 1);
			margin-left: 0;
		}
	}
}

/*  Print */
/*  -------------------------------------------------- */
@media print {
	.search-results-eventspane-controls {
		@mixin print-hide;
	}
	/* SPL-127479: prevent timeline and event results from overlapping */
	.search-results-wrapper {
		padding-top: 20px;
	}
}
