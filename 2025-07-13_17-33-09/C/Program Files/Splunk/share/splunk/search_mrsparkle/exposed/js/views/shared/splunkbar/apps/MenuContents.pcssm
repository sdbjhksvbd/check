.view {
    composes: body from "../../MenuDialog.pcssm";
    min-width: 260px;
}

.appsList {
    composes: menuSelectable from '../../MenuDialog.pcssm';
    max-height: calc(100vh - 120px);
    border-radius: $containerInnerBorderRadius $containerInnerBorderRadius 0 0;
}

.menu {
    composes: menuSelectable from "../../MenuDialog.pcssm";
}

.label {
    padding-right: 30px;
    display: inline-block;
}

.icon {
    height: 18px;
    position: absolute;
    right: 10px;
    top: 6px;
}

.selected {
    composes: selected from "../../MenuDialog.pcssm";
}
