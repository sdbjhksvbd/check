/*  Splunk : Page: Deployment Server Apps Detail */
/*  ============================================ */

.section-header {
	@mixin clearfix;
    position: relative;
    padding-bottom: 0;

    .btn-toolbar {
    	float: right;
    }
}

/*  FIXME: this should be shared by default; */
.dashboard-panel {
	.dashboard-title {
		margin: -20px -20px 10px;
		padding: 15px 20px 10px 20px;
		border-bottom: $tableBorder;
		font-size: $fontSizeLarge;
		font-weight: normal;
		color: $textColor;
	}
	.filtersContainer {
		padding-right: 20px;
		padding-left: 20px;
		margin-bottom: 10px;
	}
	.deploymentserver-search {
		margin-bottom: 0;
	}
	.message-single {
		margin: 0px 20px;
	}
	&:first-child {
		margin-top: -20px;
	}
}

/*  TODO: this should be standard component */
.filtersContainer,
.paginator_container
{
	padding-left: 20px;
}

/*  TODO: need to fix markup so this isn't needed */
.deployment_filter .btn-group {
	margin-right: 5px;
}
