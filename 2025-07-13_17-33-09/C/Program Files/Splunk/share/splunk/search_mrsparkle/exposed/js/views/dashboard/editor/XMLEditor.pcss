.dashboard-xml-editor-wrapper {
  margin: 0 -20px -15px -20px;
}

.dashboard-rendering .dashboard {
  visibility: hidden;
}

.dashboard-loading {
  position: absolute;
  width: 100%;
}

.ace_marker-layer .splunk_error_marker {
  position: absolute;
  background: $errorBackground;
  z-index: 4; /*z-index of selection marker is 5*/
}

.ace_marker-layer .splunk_warning_marker {
  position: absolute;
  background: $xmlEditorWarningBackgroundColor;
  z-index: 4; /*z-index of selection marker is 5*/
}

.xml-editor-message {
  margin: 0;
  .dashboard-message {
    border-top: 1px solid $borderColor;
    border-bottom: 1px solid $borderColor;
    padding: 6px 20px 6px 47px;
    .icon {
      font-size: 20px;
      top: 6px;
    }
  }
}
.ace-tm {
  background: $xmlEditorBackgroundColor;
  color: $textColor;
}
#dashboard-editor {
  .ace_text-input:focus {
    z-index: 0;
  }
  .ace_gutter-cell.ace_error {
    background-image: url('data:image/png;base64,');
    background-size: 13px;
    background-position: 5px 1px;

  }
  .ace_gutter-cell.ace_warning {
    background-image: url('data:image/png;base64,');
    background-size: 13px;
    background-position: 5px 1px;
  }
  .ace_tooltip {
    background: $gray30;
    color: $gray98;
    padding: 8px 10px;
    border: 0;
    border-radius: 5px;
    font-family: $fontFamily;
    font-size: $fontSize;
    line-height: 140%;
  }
}
