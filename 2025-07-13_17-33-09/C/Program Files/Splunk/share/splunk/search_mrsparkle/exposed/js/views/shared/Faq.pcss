.faq {
  padding: 20px;

  h1 {
  	font-size: 24px;
  	font-weight: 200;
  	 margin-top: 0;
  }

  h2 {
    font-size: 16px;
    font-weight: 500;
    margin: 10px 0;
  }
}

.faq-group {
	max-width: 600px;
}

.faq-header {
  margin-bottom:10px;
  cursor: pointer;
  padding-left: 14px;
  position: relative;

  .icon-accordion-toggle {
	position: absolute;
  	left: 0;
  	top:0;
  }

  &:hover .faq-question {
	text-decoration: underline;
  	text-color: $linkColor;
  }

  &:focus {
    @mixin focus-element;
    border-radius: $borderRadius;
  }
}


.faq-body {
  margin-left: 34px;
  margin-bottom: 20px;
  display: none;
}
