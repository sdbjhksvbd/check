.view {
    composes: body from "./MenuDialog.pcssm";
    min-width: 260px;
}

.appsList {
    composes: menu from './MenuDialog.pcssm';
    max-height: calc(100vh - 120px);
}

.menu {
    composes: menu from "./MenuDialog.pcssm";
}

.gt {
    composes: gt from "../Master.pcssm";
}

.subBrand {
    composes: subBrand from "../Master.pcssm";
}

.label {
    font-size: $fontSize;
}

.currentAppCheck {
    position: absolute;
    left: 10px;
    top: 0px;
}

.dropdownIcon {
    width: 20px;
    position: absolute;
    top: 0;
    right: 16px;
    text-align: center;
    color: $brandColor;
    font-size: 30px;

    > img {
        max-width: 100%;
        vertical-align: middle;
        border: 0;
    }

    > i {
        display: block;
    }
}
