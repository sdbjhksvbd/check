        left: 0px;
    }
}


.dropDown{
	text-indent: -10000px;
	width:6px;
	height:6px;
	overflow: hidden;
}



/* Rich Radio Controls */
.splRadio-group {
	display:inline-block;
}
.splRadio-group .splRadio-control {
	float:left;
	width:45px;
	height:20px;
	line-height:20px;
	border-radius: 0;
    position:relative;
	background-clip: padding-box;
}
.splRadio-group .splRadio-control + .splRadio-control {
    border-left: none;
}

.splRadio-group .splRadio-control:first-child  {
	border-radius: $interactiveBorderRadius 0 0 $interactiveBorderRadius; /* Opera 10.5, IE9, Saf5, Chrome, FF4, iOS 4, Android 2.1+ */
}
.splRadio-group .splRadio-control:last-child {
	border-radius: 0 $interactiveBorderRadius $interactiveBorderRadius 0; /* Opera 10.5, IE9, Saf5, Chrome, FF4, iOS 4, Android 2.1+ */
}

.splRadio-control input {position:absolute; left:-99999px;}

.splRadio-control  label {
	cursor:pointer;
	display:block;
	text-align:center;
    text-transform:capitalize;
    overflow: hidden;
    text-overflow: ellipsis;
}

/* state */
.splRadio-control:hover {
    background-color: #f3f3f3;
    border-color: #aaa;
    outline: none;
}

.splRadio-group .s-active.s-focus {
    background-color: #3e83bd;
    color: $white;
    text-shadow: 0 1px 0 rgba(0, 0, 0, 0.7);
}


/*overrides*/
.splRadio .wide {width: 65px;}
.splRadio-icon {width:37px;}

/* skin & icons */
.splRadio-icon label {
	text-indent:-1000em;
	direction:ltr;
	background-image: url("/static/img/skins/default/paneleditor/icon_toggle.png");
	background-repeat:no-repeat;
	/*bg clipping*/
    position:absolute;
    clip:rect(0, 29px, 21px, 7px);
}

.splRadio-icon .icon-foo{background-position:9px -56px;}
.splRadio-icon.s-active .icon-foo{background-position:-17px -56px;}

