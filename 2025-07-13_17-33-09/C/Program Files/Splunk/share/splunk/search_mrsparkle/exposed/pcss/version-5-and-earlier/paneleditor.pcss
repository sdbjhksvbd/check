

/* BEGIN: global styles */
.panels {
    background: #F4F4F4;
    position:relative;
    min-width:340px;
}
.panels ul {
    list-style: none;
    margin: 0;
    padding: 0;
}
.panels .wrapper {
    float: left;
    margin-left: -100px;
    width: 100%;
}
.panels textarea {
    resize:vertical;
    max-height:10em;
}
.panels select {
	font-size: $fontSize;
}
/* END: global styles */
/* BEGIN: tab styles */
.panels .tabs {
    width:100px;
    float:left;
    position:relative;
    z-index:2;
}

.panels .tabs li {
    cursor:pointer;
    background: #f4f4f4;
    color:$black;
    padding: 5px 8px;
    position:relative;
    border-bottom:1px solid $borderColor;
}
.panels .tabs a {
    font-size: $fontSize;
    text-shadow:0 1px 0 #fff;
    color:$black;
    display:block;
    background-color:inherit;
    text-decoration: none;
}
.panels .tabs li.contains-error a{
    color: #a6302b;
    font-weight: bold;
}
.panels .tabs .active a {
    text-shadow:0 1px 0 #fff;
    font-weight:bold;
}
.panels .tabs span {
    display:none;
}
.panels .tabs .active span {
    display:block;
    width:16px;
    height:16px;

    position:absolute;
    right:-15px;
    top:4px;

    text-indent:-1000em;
    direction:ltr;
    background: url('/static/img/skins/default/paneleditor/tab-arrow.png') no-repeat center right;
}
/* END: tab styles */
/* BEGIN: section styles */
.panels .section {
    display: none;

    margin-left:100px;
    background-color:#fff;
    border-left:1px solid $borderColor;
    padding-top:5px;
    min-height:300px;
    position:relative;
    z-index:1;
    overflow:auto;
}
.panels .section-on {
    display: block;
}
.panels .section h2
{
    padding-left:10px;
    font-weight:normal;

}
.panels .section .input-1 {
    width: 40px;
}
.panels .section .input-2 {
    width: 80px;
}
.panels .section .col-1 label {
/*    width: 175px;*/ /*SPL-49068*/
/* SPL-61031 - truncate long text */
    display: block;
    max-width: 100px;
    overflow: hidden;
    text-overflow: ellipsis;
}
.panels .section .block {display:block;}

.panels .section table {
    width: 100%;
}
.panels .section td {
    vertical-align: top;
}
/* FYI col-n denotes permutation, not the actual column */
.panels .section td.col-1 {
/*    width: 100px;*/ /*SPL-49068*/
    padding-top: 4px;
    padding-left: 10px;
    height:3em;
}
.panels .section td.col-2 {
    padding-left: 10px;
}
.panels .section td.col-2 label {
    vertical-align:top;
}
.panels .section textarea {
    width: 90%;
    height: 50px;
    margin-top:5px;
    margin-bottom:10px;
}
.panels .section .tab-error-message {
	margin: 0px 10px 10px;
    background-color: #a6302b;
    padding: 5px;
    border-radius: 5px;
    color: $white;
    font-weight: bold;
}
/* END: section styles */
/* START: buttons section */
.panels .buttons {
    margin: 0;
    background: #fff;
    border-top: 1px solid $borderColor;
    padding:10px;
    list-style:none;
    clear:both;
    position:relative;
    z-index:3;
}
.panels .buttons .item-1 {
    float:left;
}
.panels .buttons .item-2 {
    float:right;
}
/* START: buttons section */
/* START: gauge color picker section */

#automatic-mode-message {
	margin: 10px;
	background-color: #ededed;
	padding: 5px;
	border-radius: 5px;
color: $textGrayDark;
}
#automatic-mode-message p {
	margin: 0px;
	margin-bottom: 10px;
}
.panels .section .gauge-color-picker label {
    width:auto;
    float:left;
}
.panels .section .gauge-color-picker label.padded {
    margin-left:75px;
}
.panels .section .gauge-color-picker label.from {
    margin-right:5px;
    width:87px;
}
.panels .section .gauge-color-picker label.to {

}
.gauge-color-picker input {
    height:21px;
    width:50px;
    margin:0;
    padding:0 5px 0 0 ;
    border:1px solid $borderColor;

   color: $textColor;
    font-size: $fontSizeSmall;
    text-align:right;
}
.gauge-color-picker input[disabled] {
   color: $textGray;
}
.gauge-color-picker .range-start{
    border-radius:2px 0 0 2px;
}
.gauge-color-picker .range-end{
    border-radius:0 2px 2px 0;
}
.gauge-color-picker .removebutton {
    float: left;
    display:inline-block;
    width:15px;
    height:21px;
    text-indent:-1000em;
    direction:ltr;
    margin:0;
    position: relative;
    left: -2px;
    border-top-left-radius: 0px;
    border-bottom-left-radius: 0px;
}

.gauge-color-picker .removebutton .splButtonIcon {
    background: url(/static/img/skins/default/sprite_button_icons.png) no-repeat -12px -96px;
    width:15px;
    height:18px;
    margin:0;
}

.gauge-color-picker .rangeselect {
    padding: 10px 0 0 10px;
    overflow:hidden;
}

.gauge-color-picker .rangecolorpicker {
    background: transparent url("/static/img/skins/default/colorpicker/select-new.png") no-repeat 0 0 ;
    height: 23px;
    position: relative;
    left: -1px;
    width: 23px;
    float: left;
    display:inline-block;
}

.gauge-color-picker .rangecolorpicker div {
    background: transparent url("/static/img/skins/default/colorpicker/select-new.png") no-repeat -1px -1px;
    width: 19px;
    height: 19px;
    left: 1px;
    position: absolute;
    top: 1px;
}

.gauge-color-picker .rangecolorpicker:hover,
.gauge-color-picker .rangecolorpicker div:hover {
    background-image: url("/static/img/skins/default/colorpicker/select-new-hover.png");
}

.gauge-color-picker .rangecolorpicker:active,
.gauge-color-picker .rangecolorpicker div:active {
    background-image: url("/static/img/skins/default/colorpicker/select-new-active.png");
}

.gauge-color-picker .addnewholder {
    padding: 10px 0 0 10px;
}

.gauge-color-picker .addnewholder .splButtonIcon {
    background: url(/static/img/skins/default/sprite_button_icons.png) no-repeat -11px -636px;
    height:21px;
    width:12px;
    margin:0;
}

#swatch-dialog {
	position: absolute;
    width: 152px;
    left: 140px;
    z-index: 4;
    border: 1px solid $borderColor;
    background-color: $white;
    box-shadow: 1px 1px 3px #ddd;
}

#swatch-dialog .dialog-body {
	padding: 5px;
	margin: 0px;
}

#swatch-dialog ul.swatch-holder {
	list-style: none;
	margin-left: 0;
	margin-bottom: 0px;
	float: left;
	width: 75px;
}

#swatch-dialog li.swatch {
	float: left;
	width: 20px;
	height: 20px;
	border: 1px solid transparent;
	margin: 1px;
	cursor: pointer;
	border: 1px solid $borderColor;
}

#swatch-dialog li.selected-swatch {
    border: 1px solid $borderDarkColor;
}

#swatch-dialog li.swatch:hover {
	border-color: #borderDarkColor;
}

#swatch-dialog .feedback-holder {
	float: right;
	text-align: center;
}

#swatch-dialog .selected-color {
    width: 62px;
    height: 62px;
    border: 1px solid $borderColor;
}

#swatch-dialog .selected-hexcode {
	margin-top: 5px;
	border: 1px solid $borderColor;
}

#swatch-dialog .selected-hexcode .hex {
color: $textGray;
}

#swatch-dialog .input-color {
    height: 20px;
    padding: 0 2px;
    border: none;
    width: 40px;
}

#swatch-dialog .dialog-footer {
	clear: both;
	border-top: 1px solid $borderColor;
	padding: 5px;
}

#swatch-dialog .cancel-button {
	float: left;
}

#swatch-dialog .apply-button {
	float: right;
}

/* END: gauge color picker section */
/* START: rich buttons */
.panels .controls {
    float: right;
    margin-right: 10px;
}

.panels .controls label {width:auto;}
.panels .controls input[type=text]{width:98px;}
.panels .controls select {width:115px;_float:right;_margin-right:10px;}
.panels .numeric {text-align:right;}
.controls .splRadio-control {width:37px;}
.twocell .splRadio-control {width:56px;}
#colors .splRadio-control {width:auto;padding:0 1em;}
.panels tr:hover .col-1 label {text-decoration:underline;}

/* radio icons */
.splRadio .stack-off {background-position:8px 4px;}
.splRadio .stack-on  {background-position:11px -17px;}
.splRadio .stack-100 {background-position:11px -37px;}

.splRadio .null-gaps {background-position:9px -56px;}
.splRadio .null-zero {background-position:9px -77px;}
.splRadio .null-connect {background-position:9px -97px;}

.splRadio .ellipsis-start {background-position:8px -177px;}
.splRadio .ellipsis-middle {background-position:7px -197px;}
.splRadio .ellipsis-end {background-position:9px -217px;}


/* END: rich buttons */
/* BEGIN: rich dropdown */
.panels .viz-select {
    padding:5px 0 5px 10px;
    border-bottom:1px solid $borderColor;
    background: #fff;
    position:relative;
}
.panels .viz-select label {
    font-weight:bold;
    text-shadow:0 1px 0 #fff;
    margin-right:5px;
}

.panels .viz-select a.spl-external-link {
    position:absolute;
    top:10px;
    right:10px;
    /*SPL-61031 - truncate long text*/
    max-width: 45px;
    overflow: hidden;
    text-overflow: ellipsis;
}

select.viz-type {padding:1px; width:150px; }
select.viz-type .bg-img {
    background-image: url('/static/img/skins/default/paneleditor/viz-icons.png');
    background-repeat:no-repeat;
    margin: 2px 0;
    padding: 1px 0 1px 30px;
    vertical-align: middle;
}

