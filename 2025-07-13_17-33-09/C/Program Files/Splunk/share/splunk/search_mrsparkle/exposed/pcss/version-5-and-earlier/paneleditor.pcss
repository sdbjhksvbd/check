.ui-selectmenu-item-icon {
    width:36px;
    height:20px;
}
.ui-selectmenu .ui-selectmenu-icon {
    background: url('/static/img/skins/default/paneleditor/toggle-arrow.png') no-repeat 1px 2px;
    width:10px;
    height:10px;
    margin-top:-4px;
}
a.ui-selectmenu:hover {
	text-decoration:none;
    border-color: #aaa;
	background-color: #F3F3F3;
}
.ui-selectmenu {
    border:1px solid $borderColor;
    border-radius:4px;
    background: #fff url('/static/img/skins/default/paneleditor/gradient_20.png') repeat-x bottom center;
}
.ui-selectmenu-menu {
    background-color:#fff;
    color:$black;
    box-shadow: 0 2px 2px #666;
    border:1px solid $borderColor;
    border-top:none;
}


.ui-selectmenu-menu .ui-selectmenu-group {border-top:1px solid $borderColor}
.ui-selectmenu-menu .ui-selectmenu-group .ui-selectmenu-group-label {display:none;*display:block;}

.ui-selectmenu-menu li.ui-selectmenu-hasIcon a,
.ui-selectmenu-hasIcon .ui-selectmenu-status
{
    padding-left: 35px;
   color: $textColor;
    /* SPL-61031 - Truncate long text*/
    overflow: hidden;
    text-overflow: ellipsis;
}

.ui-selectmenu-menu li.ui-selectmenu-hasIcon.disabled a {
   color: $textGray;
}

.ui-selectmenu-item-focus
{
    background-color:#F3ECBB;
    color:$black;
}
