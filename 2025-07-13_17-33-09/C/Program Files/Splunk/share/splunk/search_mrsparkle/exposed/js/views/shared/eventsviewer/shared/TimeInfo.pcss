.shared-eventsviewer-shared-timeinfo {
	width: 410px;

	.nearby-value {
		display: flex;
		align-items: flex-start;
	}

	.control-group {
		flex: 1 0 0px;

        .range-type {
            flex: 0 0 80px;
        }

        .range-units {
            border-top-right-radius: 4px;
            border-bottom-right-radius: 4px;
            flex-basis: 100px;
        }
	}

	.apply {
		margin: 5px 5px 5px 10px;
	}


}
